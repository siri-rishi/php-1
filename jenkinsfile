pipeline{
    agent any
    environment{
        IMAGE_NAME ='sirishadevops/java-mvn-privaterepos:php$BUILD_NUMBER'
        SERVER_IP ='ec2-user@15.207.84.42'
    }
    stages{
        stage('Build docker image'){
            agent any
             steps{
                 script{
        sshagent(['Test_Server_Key']) {
        withcridentials([usernamepassword(cridentialsId: 'docker-hub', passwordvarible: 'PASSWORD', usernamevariable: 'username')]){
    echo "Building the docker image"
    sh "scp -o strictHostkeychecking=no docker-script.sh ${SERVER_IP}:/home/ec2-user" 
    sh "scp -o strictHostkeychecking=no -r ./ ${SERVER_IP}:/home/ec2-user"
    sh "scp -o strictHostkeychecking=no ec2-user@172.31.33.78 'bash ~/docker-script.sh'"
    sh "ssh ${SERVER_IP} sudo docker build -t ${IMAGE_NAME} /home/ec2-user/php-1"          
    sh "ssh ${SERVER_IP} sudo docker login -u $USERNAME -p $PASSWORD"
    sh "ssh ${SERVER_IP} sudo docker push ${IMAGE_NAME}"
                }       
            }     
        }
          }
}
    }
}